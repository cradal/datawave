    <build>
        <plugins>
            <plugin>
                <!--
                    Override the javadoc configuration to include source jars from our dependencies in order to build combined
                    documentation for the entire distribution.
                -->
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>module-apidocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration combine.children="append">
                            <includeDependencySources>true</includeDependencySources>
                            <includeTransitiveDependencySources>true</includeTransitiveDependencySources>
                            <dependencySourceIncludes>
                                <dependencySourceInclude>nsa.datawave:*</dependencySourceInclude>
                                <dependencySourceInclude>nsa.datawave.webservice:*</dependencySourceInclude>
                            </dependencySourceIncludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>module-jaxbdocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration combine.children="append">
                            <includeDependencySources>true</includeDependencySources>
                            <includeTransitiveDependencySources>true</includeTransitiveDependencySources>
                            <dependencySourceIncludes>
                                <dependencySourceInclude>nsa.datawave:*</dependencySourceInclude>
                                <dependencySourceInclude>nsa.datawave.webservice:*</dependencySourceInclude>
                            </dependencySourceIncludes>
                            <!-- JAX-B docs aren't attached by default. Override that here to include the combined JAX-B docs jar. -->
                            <attach>true</attach>
                        </configuration>
                    </execution>
                    <execution>
                        <id>module-jaxrsdocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration combine.children="append">
                            <includeDependencySources>true</includeDependencySources>
                            <includeTransitiveDependencySources>true</includeTransitiveDependencySources>
                            <dependencySourceIncludes>
                                <dependencySourceInclude>nsa.datawave:*</dependencySourceInclude>
                                <dependencySourceInclude>nsa.datawave.webservice:*</dependencySourceInclude>
                            </dependencySourceIncludes>
                            <!-- JAX-RS docs aren't attached by default. Override that here to include the combined JAX-RS docs jar. -->
                            <attach>true</attach>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
